{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Email</th>
                <th>Name</th>
                <th>LastName</th>
                <th>BirthDate</th>
                <th>Speciality</th>
                <th>Status</th>
                <th>Experience</th>
                <th>Hight</th>
                <th>Weight</th>
                <th>Post</th>
                <th>Cv</th>
                <th>Media</th>
                <th>Company</th>
                <th>Position</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ user.speciality }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.experience }}</td>
                <td>{{ user.hight }}</td>
                <td>{{ user.weight }}</td>
                <td>{{ user.post }}</td>
                <td>{{ user.cv }}</td>
                <td>{{ user.media }}</td>
                <td>{{ user.company }}</td>
                <td>{{ user.position }}</td>
                <td>{{ user.description }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="20">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
